<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/ios_background">
	<RelativeLayout
		android:id="@+id/linear7"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear8"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" />
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="16dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:src="@drawable/llucas7e7"
				android:scaleType="fitCenter" />
			<LinearLayout
				android:id="@+id/principal_login"
				android:layout_width="280dp"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:background="@drawable/ios_card_background"
				android:orientation="vertical"
				android:elevation="2dp"
				android:layout_marginTop="24dp">
				<TextView
					android:id="@+id/textview5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/panel_title"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/ios_text_primary"
					android:layout_gravity="center_horizontal"
					android:layout_marginBottom="8dp" />
				<TextView
					android:id="@+id/textview6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/home_subtitle"
					android:textSize="14sp"
					android:textColor="@color/ios_text_secondary"
					android:layout_gravity="center_horizontal"
					android:layout_marginBottom="16dp" />
				<Button
					android:id="@+id/op1"
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:text="@string/start_game"
					android:textSize="16sp"
					android:textColor="@android:color/white"
					android:background="@drawable/ios_button_background"
					android:layout_marginBottom="8dp" />
				<Button
					android:id="@+id/op2"
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:text="@string/start_injector"
					android:textSize="16sp"
					android:textColor="@android:color/white"
					android:background="@drawable/ios_button_background" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="1" />
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>

